{
  "extends": [
    "eslint:recommended",
    "plugin:vue/recommended"
  ],
  "env": {
    "browser": true,
    "amd": true,
    "node": true
  },
  "rules": {
    "comma-dangle": ["error", "never"],
    "semi": ["error", "never"],
    "vue/max-attributes-per-line": ["error", {
      "singleline": {
        "max": 3
      },      
      "multiline": {
        "max": 1
      }
    }]
  },
  "plugins": [
    "mocha"
  ],
  "globals": {
    "localStorage": true,
    "fetch": true
  },
  "ignorePatterns": ["*.test.js"]
}
